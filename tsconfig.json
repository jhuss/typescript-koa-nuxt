{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "root~/*": ["../*"],
      "~/*": ["./*"],
      "~/client/*": ["./client/*"],
      "~/server/*": ["./server/*"]
    },
    "outDir": "./out"
  },
  "exclude": ["node_modules"]
}
